\begin_body

\begin_layout Standard
Assuming risk neurtality, a worker 
\begin_inset Formula $i\in\left\{ B,W\right\} $
\end_inset

 solves the following problem when working for an employer 
\begin_inset Formula $j\in\left\{ B,W\right\} $
\end_inset

 where 
\begin_inset Formula $B$
\end_inset

 and 
\begin_inset Formula $W$
\end_inset

 denote the black or white race of an agent (employer or worker) respectively;
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\underbrace{max}_{e_{ij}\geq0}U_{ij}=\underbrace{max}_{e_{ij}\geq0}\left(w_{j}+(s_{ij})e_{ij}-c(e_{ij})+\rho\zeta\sigma\right)
\]

\end_inset


\end_layout

\begin_layout Standard
where
\end_layout

\begin_layout Standard
\begin_inset Formula $\zeta(w_{j})=(w_{j}+s_{ij}e_{ij}''-c(e_{ij}''))-(ve_{ij}''-w_{j})$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\sigma(e)=(ve_{ij}-w_{j})-(ve_{ij}''-w_{j})$
\end_inset


\end_layout

